# AutoHDR runtime paths
AUTOHDR_DATA_ROOT="/Volumes/Love SSD"
AUTOHDR_OUTPUT_ROOT="/Volumes/Love SSD/AutoHDR_Submissions"
AUTOHDR_CHECKPOINT_ROOT="/Volumes/Love SSD/AutoHDR_Checkpoints"

# Kaggle MCP
KAGGLE_API_TOKEN=
KAGGLE_MCP_URL=https://www.kaggle.com/mcp

# Kaggle CLI auth for downloads:
# - Preferred: token-only (KAGGLE_API_TOKEN)
# - Fallback: username + key
KAGGLE_USERNAME=
KAGGLE_KEY=

# Akash deployment settings
AKASH_API_KEY=
# Optional: remote script URL. If unset, deploy script falls back to repo-clone mode.
AKASH_TRAIN_SCRIPT_URL=
# Optional: repo-clone mode settings
AKASH_TRAIN_REPO_URL=https://github.com/guitarbeat/AutoHDR-LensCorrection.git
AKASH_TRAIN_ENTRYPOINT=python3 -m backend.scripts.local_training.train --data-root /app/AutoHDR/data --output-dir /app/AutoHDR/checkpoints --model micro_unet --epochs 8 --batch-size 8 --img-size 256 --lr 0.001 --max-train 10000 --max-val 1000 --num-workers 4

# Cost controls
# Single deploy override (optional)
# AKASH_MAX_AKT_PER_HOUR=1.333333
# Matrix/global controls (used when AKASH_MAX_AKT_PER_HOUR is unset)
AKASH_MAX_AKT_PER_HOUR_TOTAL=4.0
AKASH_DEPLOYMENT_COUNT=3
AKASH_DEPOSIT_AMOUNT=5

# Bounty submission automation (optional)
AUTOHDR_BOUNTY_TEAM_NAME=
AUTOHDR_BOUNTY_EMAIL=
AUTOHDR_BOUNTY_KAGGLE_USERNAME=
AUTOHDR_BOUNTY_GITHUB_REPO=
